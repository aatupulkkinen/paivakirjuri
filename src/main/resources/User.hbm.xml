<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="otp.model.entities.User" table="users" schema="test_eng">
        <id name="name">
            <column name="name" sql-type="varchar(40)" length="40"/>
        </id>
        <property name="password">
            <column name="password" sql-type="varchar(128)" length="128"/>
        </property>
        <property name="firstName">
            <column name="first_name" sql-type="varchar(40)" length="40"/>
        </property>
        <property name="secondName">
            <column name="second_name" sql-type="varchar(40)" length="40"/>
        </property>
    </class>
</hibernate-mapping>